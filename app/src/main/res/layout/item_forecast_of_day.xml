<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linLayItemForecastOfDayClickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_list_dark_selector"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/common_padding_large"
            android:paddingTop="@dimen/common_padding_large">

            <TextView
                style="@style/TitleFontWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/forecast_of_day"
                android:textAllCaps="true" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivItemForecastOfDayBanner"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding_medium"
            android:orientation="horizontal"
            android:padding="@dimen/common_padding_medium">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvItemForecastOfDayTitle"
                    style="@style/TitleFontGreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Атлетико Насьональ - Сан-Паулу" />

                <TextView
                    android:id="@+id/tvItemForecastOfDaySubTitle"
                    style="@style/BodyFontSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_padding_medium"
                    android:text="Прогноз на матч 14.07.16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivItemForecastOfDayHot"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="@dimen/common_padding_medium"
                    android:layout_marginRight="@dimen/common_padding_medium"
                    android:src="@drawable/forecastday" />

                <ImageView
                    android:id="@+id/ivItemForecastOfDayInfogr"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/chart" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_padding_medium"
            android:layout_marginLeft="@dimen/common_padding_small"
            android:layout_marginRight="@dimen/common_padding_small"
            android:layout_marginTop="@dimen/common_padding_medium"
            android:background="@color/custom_green_dark"
            android:paddingBottom="@dimen/common_padding_large"
            android:paddingLeft="@dimen/common_padding_medium"
            android:paddingRight="@dimen/common_padding_medium"
            android:paddingTop="@dimen/common_padding_large">

            <TextView
                android:id="@+id/tvItemForecastOfDayCoeff"
                style="@style/TitleFontWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="ИТМ2 (2)" />

        </LinearLayout>
    </LinearLayout>


    <include layout="@layout/item_forecast_filter" />
</LinearLayout>