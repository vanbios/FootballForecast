<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/common_padding_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="@dimen/common_padding_medium"
            android:src="@drawable/icon_calendar" />

        <TextView
            android:id="@+id/tvItemForecastDetailsPlaceDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding_medium"
            android:layout_weight="1"
            android:text="Дата матча: 24.07.2016, 19:00 (мск)" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="@dimen/common_padding_medium"
            android:src="@drawable/icon_cup" />

        <TextView
            android:id="@+id/tvItemForecastDetailsPlaceTournament"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding_medium"
            android:layout_weight="1"
            android:text="Турнир: Лига чемпионов, квалификация" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_light" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="@dimen/common_padding_medium"
            android:src="@drawable/icon_stadium" />

        <TextView
            android:id="@+id/tvItemForecastDetailsPlaceStadium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding_medium"
            android:layout_weight="1"
            android:text="Место проведения: Национальная арена Филлипа Македонского, Скопье" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_light" />

</LinearLayout>