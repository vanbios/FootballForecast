<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/gray_light"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_padding_xlarge"
    android:paddingLeft="@dimen/common_padding_large"
    android:paddingRight="@dimen/common_padding_large"
    android:paddingTop="@dimen/common_padding_large">

    <TextView
        style="@style/SubheadFontGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/average_progress_in_tournament"
        android:textAllCaps="true"
        android:textColor="@color/custom_green_infogr"
        android:textSize="@dimen/text_size_body" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding_xlarge"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding_small"
                android:paddingRight="@dimen/common_padding_small">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvItemForecastDetailsAverageProgress1"
                        style="@style/BodyFontSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="1.4"
                        android:textColor="@color/custom_green_infogr" />

                    <View
                        android:id="@+id/vItemForecastDetailsAverageProgress1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/custom_green_infogr" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvItemForecastDetailsAverageProgress2"
                        style="@style/BodyFontSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="1.9"
                        android:textColor="@color/custom_blue_infogr" />

                    <View
                        android:id="@+id/vItemForecastDetailsAverageProgress2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/custom_blue_infogr" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                style="@style/BodyFontSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_padding_large"
                android:gravity="center_horizontal"
                android:lines="2"
                android:text="@string/goals_per_match"
                android:textAllCaps="true"
                android:textSize="12sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding_xlarge"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding_small"
                android:paddingRight="@dimen/common_padding_small">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvItemForecastDetailsAverageProgress3"
                        style="@style/BodyFontSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="1.4"
                        android:textColor="@color/custom_green_infogr" />

                    <View
                        android:id="@+id/vItemForecastDetailsAverageProgress3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/custom_green_infogr" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvItemForecastDetailsAverageProgress4"
                        style="@style/BodyFontSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="1.9"
                        android:textColor="@color/custom_blue_infogr" />

                    <View
                        android:id="@+id/vItemForecastDetailsAverageProgress4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/custom_blue_infogr" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                style="@style/BodyFontSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_padding_large"
                android:gravity="center_horizontal"
                android:lines="2"
                android:text="@string/miss_goals_per_match"
                android:textAllCaps="true"
                android:textSize="12sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding_xlarge"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_padding_small"
                android:paddingRight="@dimen/common_padding_small">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvItemForecastDetailsAverageProgress5"
                        style="@style/BodyFontSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="1.4"
                        android:textColor="@color/custom_green_infogr" />

                    <View
                        android:id="@+id/vItemForecastDetailsAverageProgress5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/custom_green_infogr" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvItemForecastDetailsAverageProgress6"
                        style="@style/BodyFontSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="1.9"
                        android:textColor="@color/custom_blue_infogr" />

                    <View
                        android:id="@+id/vItemForecastDetailsAverageProgress6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/custom_blue_infogr" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                style="@style/BodyFontSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_padding_large"
                android:gravity="center_horizontal"
                android:lines="2"
                android:text="@string/collect_points_per_match"
                android:textAllCaps="true"
                android:textSize="12sp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>