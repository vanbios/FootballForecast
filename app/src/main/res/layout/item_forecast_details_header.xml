<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivItemForecastDetailsHeaderBanner"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding_medium"
        android:orientation="horizontal"
        android:padding="@dimen/common_padding_medium">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemForecastDetailsHeaderTitle"
                style="@style/TitleFontGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Атлетико Насьональ - Сан-Паулу" />

            <TextView
                android:id="@+id/tvItemForecastDetailsHeaderSubTitle"
                style="@style/BodyFontWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_padding_medium"
                android:text="Прогноз на матч 14.07.16"
                android:textColor="@color/custom_gray_background"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>