<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_list_light_selector"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivItemForecastBanner"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_padding_medium"
        android:orientation="horizontal"
        android:padding="@dimen/common_padding_medium">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemForecastTitle"
                style="@style/TitleFontGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Атлетико Насьональ - Сан-Паулу" />

            <TextView
                android:id="@+id/tvItemForecastSubTitle"
                style="@style/BodyFontBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_padding_medium"
                android:text="Прогноз на матч 14.07.16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivItemForecastHot"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/common_padding_medium"
                android:layout_marginRight="@dimen/common_padding_medium"
                android:src="@drawable/forecastday" />

            <ImageView
                android:id="@+id/ivItemForecastInfogr"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/chart" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>